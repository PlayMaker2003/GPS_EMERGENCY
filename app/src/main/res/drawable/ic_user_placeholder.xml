<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo circular -->
    <solid android:color="#DDDDDD" /> <!-- Color gris claro -->

    <!-- Dimensiones -->
    <size
        android:width="100dp"
        android:height="100dp" />

    <!-- Bordes redondeados (círculo) -->
    <corners android:radius="50dp" />

    <!-- Borde opcional -->
    <stroke
        android:width="2dp"
        android:color="#AAAAAA" /> <!-- Borde gris más oscuro -->
</shape>
