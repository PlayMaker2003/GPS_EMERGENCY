<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:padding="16dp">

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvTituloAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ayuda"
        android:textColor="#388E3C"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- CardView para el contenido principal -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContenidoAyuda"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloAyuda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnCerrarAyuda"
        app:cardCornerRadius="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Bienvenida -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bienvenido_aqu_encontrar_s_las_instrucciones_para_usar_la_aplicaci_n_de_forma_r_pida_y_sencilla"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp" />

                <!-- Paso 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="@string/agregar_contacto"
                            android:src="@drawable/ic_add_contact"
                            app:tint="#4CAF50"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/_1_agrega_contactos_usando_el_bot_n_agregar_contacto"
                            android:textSize="14sp"
                            android:textColor="#757575" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Paso 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_map"
                            android:contentDescription="@string/ver_mapa"
                            app:tint="#1976D2"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/_2_usa_ver_mapa_para_acceder_a_tu_ubicaci_n_en_tiempo_real"
                            android:textSize="14sp"
                            android:textColor="#757575" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Paso 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="@string/realizar_llamada"
                            android:src="@drawable/ic_call"
                            app:tint="#F57C00"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/_3_realiza_llamadas_r_pidas_desde_la_lista_de_contactos"
                            android:textSize="14sp"
                            android:textColor="#757575" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Sugerencia -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sab_as_que_puedes_personalizar_tu_perfil_desde_el_men_principal"
                    android:textSize="14sp"
                    android:textColor="#1976D2"
                    android:layout_marginTop="16dp"
                    android:textStyle="italic" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Botón para cerrar -->
    <Button
        android:id="@+id/btnCerrarAyuda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4CAF50"
        android:elevation="6dp"
        android:padding="12dp"
        android:text="@string/entendido"
        android:textColor="#FFF7F7"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>
