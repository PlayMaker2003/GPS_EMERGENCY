<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Contenedor de la foto y el título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:background="@drawable/card_background"
            android:elevation="6dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FFFFFF">

            <!-- Foto de perfil -->
            <ImageView
                android:id="@+id/ivFotoPerfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_user_placeholder"
                android:contentDescription="@string/foto_perfil"
                android:layout_marginBottom="8dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop" />

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvNombreCompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Completo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- Información del perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/card_background"
            android:elevation="6dp"
            android:layout_marginBottom="16dp">

            <!-- Edad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edad:"
                    android:textSize="16sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tvEdad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23 años"
                    android:textSize="16sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- Peso -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Peso:"
                    android:textSize="16sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tvPeso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70 kg"
                    android:textSize="16sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- Altura -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Altura:"
                    android:textSize="16sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tvAltura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="170 cm"
                    android:textSize="16sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- Tipo de sangre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tipo de Sangre:"
                    android:textSize="16sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tvTipoSangre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O+"
                    android:textSize="16sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- Enfermedades -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enfermedades:"
                    android:textSize="16sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tvEnfermedades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ninguna"
                    android:textSize="16sp"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Botón para editar perfil -->
            <Button
                android:id="@+id/btnEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Perfil"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:elevation="6dp"
                android:layout_marginBottom="12dp" />

            <!-- Botón para ir al directorio -->
            <Button
                android:id="@+id/btnIrDirectorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ir al Directorio"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                android:elevation="6dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
